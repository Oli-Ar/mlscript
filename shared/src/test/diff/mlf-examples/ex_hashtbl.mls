// let nfind table key =
//   begin match find table key with
//   | None -> fun f x -> x
//   | Some n -> n
//   end
def nfind table key =
  let opt = find table key in
  case opt of
  { None -> fun f -> fun x -> x
  | Some -> opt.val
  }
//│ nfind: List[?] -> anything -> anything -> (forall 'a. 'a -> 'a)
//│      = [Function: nfind]

// type Int = ['a] ('a -> 'a) -> ('a -> 'a)
type ChurchInt = forall 'a. ('a -> 'a) -> ('a -> 'a)
//│ Defined type alias ChurchInt

// let succ (n:Int) = fun f x -> f (n f x)
def succ (n: ChurchInt) = fun f -> fun x -> f (n f x)
def succ' n = fun f -> fun x -> f (n f x)
//│ succ: ChurchInt -> (forall 'a. 'a -> (forall 'a. ('b -> 'c
//│   where
//│     'a <: (forall 'a, 'd, 'b, 'e. (('e,)
//│   where
//│     'd <: 'a -> 'b -> 'e)) -> 'c)))
//│     = [Function: succ]
//│ succ': 'a -> (forall 'b. 'b -> (forall 'b. ('c -> 'd
//│   where
//│     'b <: (forall 'a, 'b, 'c, 'e. (('e,)
//│   where
//│     'a <: 'b -> 'c -> 'e)) -> 'd)))
//│      = [Function: succ]

// let add (n:Int) (m:Int) = n succ m
def add (n: ChurchInt) (m: ChurchInt) = n succ m
def add' n m = n succ' m
//│ add: ChurchInt -> (forall 'a. (ChurchInt -> 'b
//│   where
//│     'a <: (ChurchInt -> (forall 'c. 'c -> (forall 'c. ('d -> 'e
//│   where
//│     'c <: (forall 'c, 'f, 'd, 'g. (('g,)
//│   where
//│     'f <: 'c -> 'd -> 'g)) -> 'e)))) -> ChurchInt -> 'b))
//│    = [Function: add]
//│ add': 'a -> (forall 'a. ('b -> 'c
//│   where
//│     'a <: (forall 'd. 'd -> (forall 'e. 'e -> (forall 'e. ('f -> 'g
//│   where
//│     'e <: (forall 'd, 'e, 'f, 'h. (('h,)
//│   where
//│     'd <: 'e -> 'f -> 'h)) -> 'g)))) -> 'b -> 'c))
//│     = [Function: add]

